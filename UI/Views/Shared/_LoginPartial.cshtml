@if(Context.User.Identity.Name != null)
{
    <form asp-controller="Authentication" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">

        <ul class="nav navbar-nav navbar-right">
            <li>
                hello @Context.User.Identity.Name!
            </li>
            <li>
                <button type="submit"
                        class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-dark" asp-controller="Authentication" asp-action="Registration">Registration</a> </li>
        <li><a class="nav-link text-dark" asp-controller="Authentication" asp-action="Login">Login</a></li>
    </ul>
}